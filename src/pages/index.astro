<script type="text/javascript">
const colorButton = document.getElementById("reveal-button");
const colors = ["bg-blue-200", "bg-green-200", "bg-lilac-200"]; // Add more colors if needed

let currentColorIndex = 0;

colorButton.addEventListener("click", () => {
	const body = document.querySelector("body");

	// Remove the previous color class
	body.classList.remove(colors[currentColorIndex]);

	// Update the current color index
	currentColorIndex = (currentColorIndex + 1) % colors.length;

	// Add the new color class
	body.classList.add(colors[currentColorIndex]);
});
</script>
